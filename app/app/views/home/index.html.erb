
<div class="container">

<h1>NOppression News</h1>
<h4>Not Today, Son. Not On My Worst Day.</h4>



	<div class="row">

		<div class="col-12">

<p id="notice"><%= notice %></p>




    <% @posts.each do |post| %>
      
     
        
       <%= post.upvotes %>
       <%= post.headline %>
       <%= post.url %>
       <%= User.find_by_id(post.user_id).username %>

       <%= link_to 'Comments', post %>
       <%= link_to 'Edit', edit_post_path(post) %>
       <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      
    <% end %>


<br>



