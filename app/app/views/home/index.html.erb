
<div class="container">

<h1>NOppression News</h1>
<h4>Not Today, Son. Not On My Worst Day.</h4>



	<div class="row">

		<div class="col-12">

<p id="notice"><%= notice %></p>




    <% @posts.each do |post| %>
      
     <div class="card w-70"> 
        <div class="card-body">
          <h5 class="card-title"> <%= post.upvotes %> <%= post.headline %></h5>
          <p class="card-text"> <%= User.find_by_id(post.user_id).username %> 
               <%= link_to 'Comments', post %>
       <% if post.user_id == current_user.id %>
       <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= post.url %></p>
      
       
      

  
       <% end %>
        </div>
      </div>
    <% end %>


<br>



		</div>

	</div>
