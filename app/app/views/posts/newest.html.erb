
<div class="container">

<h2 class="text-center">Newest</h2>

<p id="notice"><%= notice %></p>




    <% @posts.each do |post| %>
      
     <div class="card w-70 mt-5"> 
       
          <div class="row">
            <div class="col-12">
              <h5 class="card-title card-headline"> 



                 <%= link_to post.headline.capitalize, post.url %></h5>
            </div>
          </div>


          <div class="row">
            <div class="col-4">
              <p class="card-text"><%= render 'posts/like_link', post: post %> <%= render 'posts/likes', post: post %> 
            </div>
          


            <div class="col-8 pull-right">
              <div class="url float-right">
             <p class="card-text"> (<%= post.url.truncate(40) %>) </p>
              </div>

          </div>
        </div>

                   <div class="row">
                      <div class="col-12 mt-1">
                    <p class="post-user-submit-time">Submitted by <%= link_to User.find_by_id(post.user_id).username , user_path(post.user.id) %> 

                 <%= time_ago_in_words post.created_at %> ago</p>
               </div>
               </div>
    
    <div class="row mt-2">
          <div class="col-12">
<p> <%= post.body.truncate(240) %> </p>

</div>
</div>

       <div class="row mt-2">
          <div class="col-6">


               <%= link_to post, class: "text-light btn btn-success btn-sm" do %>
                <%= post.comments.count %> <%= "comment".pluralize(post.comments.count) %>
               <% end %>
                               <% if current_user && current_user.moderator %>
                                                <%= link_to 'Destroy', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                                          <% end %>
                

                              
        </div>

       </div>
       


      
    </div>
     
    <% end %>

 </div>
<br>



		

