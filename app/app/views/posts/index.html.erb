<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
     
      <th>User</th>
      <th>Url</th>
      <th>Upvotes</th>
      <th>Headline</th>
      <th>Body</th>
 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      
        <td><%= post.user.username %></td>
        <td><%= post.url.truncate(20) %></td>
        <td><%= post.cached_votes_up %></td>
        <td><%= post.headline %></td>
        <td><%= post.body.truncate(40) %></td>
 

        <td><%= link_to 'Show', post %></td>
        <% if user_signed_in? && current_user.moderator %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
