<p id="notice"><%= notice %></p>

<div class="container mb-5 mt-5">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
<h5><%= @post.upvotes %> <%= link_to @post.headline, @post.url %></h5></h5>
